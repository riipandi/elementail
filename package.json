{
  "name": "elementail",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/riipandi/elementail"
  },
  "scripts": {
    "build": "turbo run build --filter=!./examples/*",
    "dev": "turbo run dev --no-cache --parallel --continue",
    "export": "turbo run export --filter=website... --filter=docs...",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md,mdx}\"",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint --fix",
    "prepare": "husky install",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo run build --filter=docs^... --filter=website^... && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.25.2",
    "@elementail/eslint-config": "workspace:*",
    "eslint": "^8.28.0",
    "husky": "^8.0.2",
    "lint-staged": "^13.0.3",
    "prettier": "^2.8.0",
    "turbo": "^1.6.3"
  },
  "packageManager": "pnpm@7.15.0"
}
