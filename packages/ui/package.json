{
    "name": "ui",
    "version": "0.1.0",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": "./dist",
        "./styles.css": "./dist/styles.css"
    },
    "license": "MIT",
    "scripts": {
        "build": "tsup src/index.tsx --format esm,cjs --dts --external react && tailwindcss -i ./src/styles.css -o ./dist/styles.css",
        "dev": "concurrently \"tsup src/index.tsx --format esm,cjs --dts --external react --watch\" \"tailwindcss -i ./src/styles.css -o ./dist/styles.css --watch\"",
        "clean": "rm -rf dist"
    },
    "devDependencies": {
        "@tailwindcss/aspect-ratio": "^0.4.2",
        "@tailwindcss/forms": "^0.5.3",
        "@tailwindcss/line-clamp": "^0.4.2",
        "@tailwindcss/typography": "^0.5.8",
        "@types/react-dom": "^17.0.11",
        "@types/react": "^17.0.37",
        "concurrently": "^7.2.2",
        "eslint-config-elementail": "workspace:*",
        "eslint": "^7.32.0",
        "react": "^18.2.0",
        "tailwind-config": "workspace:*",
        "tailwindcss": "^3.1.4",
        "tsconfig": "workspace:*",
        "tsup": "^6.1.3",
        "typescript": "^4.5.3"
    }
}
